<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cameraRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rtmppush.hx.com.rtmppush.MineActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <TextView
        android:id="@+id/mine_titletv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="我的"
        android:textSize="20dp" />

<ImageView
    android:id="@+id/my_iv"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/loginicon_web"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="28dp"
    android:layout_marginBottom="20dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal"
    android:layout_margin="2dp">

<TextView
    android:id="@+id/my_nametv"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="30dp"
    android:text="昵称"
    android:textSize="20dp" />

    <TextView
        android:id="@+id/my_name"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:textSize="20dp"
        android:text="无" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:layout_margin="2dp">

        <TextView
            android:id="@+id/my_numtv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="30dp"
            android:text="账号:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/my_num"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="暂无"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp">

        <TextView
            android:id="@+id/my_emailtv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="30dp"
            android:text="邮箱:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/my_email"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="无"
            android:textSize="20dp"/>

    </LinearLayout>
<TextView
    android:id="@+id/my_settingtv"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:text="设置"
    android:gravity="center_horizontal"
    android:layout_marginTop="80dp"
    android:layout_marginLeft="20dp"
    android:textSize="10dp"/>

</LinearLayout>

    <include layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"/>
    </RelativeLayout>